<div class="w3-row-padding w3-margin-bottom">
      <div class="w3-container w3-center w3-padding-16">

        <header class="w3-container w3-center" style="padding-top:22px; padding-bottom:22px">
          <h4><b><i class="fa fa-users"></i> Manage User Accounts</b></h4>
        </header>



      <table class="w3-table-all w3-hoverable">
        <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email Address</th>
          <th>Enabled</th>
          <th></th>
          <th></th>
          <th class="w3-center">{{add-new-user}}</th>
        </tr>
        </thead>
        <tbody>

        {{#each usersModel as |user|}}
          <tr>
            <td>
              {{user.firstName}}
            </td>
            <td>
              {{user.lastName}}
            </td>
            <td>
              {{user.email}}
            </td>
            <td class="w3-center">
              {{enable-disable-account ID=user.id status=user.enabled}}
            </td>
            <td class="w3-center">
              {{assign-role ID=user.id}}
            </td>
            <td class="w3-center">
              {{edit-user ID=user.id }}
            </td>
            <td class="w3-center">
              {{delete-user ID=user.id }}
            </td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
</div>