
<!-- Top container -->
<div class="w3-bar w3-top w3-black w3-large" style="z-index:4">
  <button class="w3-bar-item w3-button w3-hide-large w3-hover-none w3-hover-text-light-grey"><i class="fa fa-bars"></i>  Menu</button>
  <span class="w3-bar-item">MedicART</span>
  {{log-out}}
</div>


<!-- Sidebar/menu -->
<nav class="w3-sidebar w3-collapse w3-light-grey" style="z-index:3;width:300px;" id="mySidebar"><br>
  <div class="w3-container">
    <!--<div class="w3-col s4">
      <img src="/assets/images/generic_user.png" class="w3-circle w3-margin-right" style="width:46px">
    </div>-->
    <div class="w3-container w3-center">
      <span>Welcome, <strong>{{username}}</strong></span><br>
      <a class="w3-bar-item w3-button {{Hi}}" {{action "HistoryPress"}}><i class="fa fa-history"></i></a>
      <a class="w3-bar-item w3-button {{M}}" {{action "MessagePress"}}><i class="fa fa-comment"></i></a>
      <a class="w3-bar-item w3-button {{S}}" {{action "SettingsPress"}}><i class="fa fa-cog"></i></a>
    </div>
  </div>
  <hr>
  <div class="w3-bar-block">
    <a class="w3-bar-item w3-button w3-padding {{Ho}}" {{action "HomePress"}}><i class="fa fa-home fa-fw"></i>  Home</a>
    <a class="w3-bar-item w3-button w3-padding {{Hi}}" {{action "HistoryPress"}}><i class="fa fa-history fa-fw"></i>  History</a>
    <a class="w3-bar-item w3-button w3-padding {{C}}" {{action "ClassPress"}}><i class="fa fa-users fa-fw"></i>  Classes  <span class="w3-badge w3-right">0</span></a>
    <a class="w3-bar-item w3-button w3-padding {{M}}" {{action "MessagePress"}}><i class="fa fa-comments fa-fw"></i>  Messages  <span class="w3-badge w3-right">0</span></a>
    <a class="w3-bar-item w3-button w3-padding {{S}}" {{action "SettingsPress"}}><i class="fa fa-cog fa-fw"></i>  Settings</a><br><br>
    
  </div>
</nav>

<!-- Overlay effect when opening sidebar on small screens -->
<div class="w3-overlay w3-hide-large w3-animate-opacity" onclick="w3_close()" style="cursor:pointer" title="close side menu" id="myOverlay"></div>

