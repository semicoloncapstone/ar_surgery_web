<header class="w3-container w3-center" style="padding-top:22px; padding-bottom:22px">
    <h1><b><i class="fa fa-cog"></i> Settings</b></h1>
  </header>

{{#if ADM01IsPermitted }}
  <div class="w3-bar w3-black">
      <a class="w3-bar-item w3-button w3-mobile {{UA}}" style="width:33.33333%" {{action "manageUsers"}} >
        <i class="fa fa-users"></i>
        Manage User Accounts
      </a>
      <a class="w3-bar-item w3-button w3-mobile {{SR}}" style="width:33.33333%" {{action "manageRoles"}} >
        <i class="fa fa-list"></i>
        Manage System Roles
      </a>
      <a class="w3-bar-item w3-button w3-mobile {{SP}}" style="width:33.33333%" {{action "manageFeatures"}} >
        <i class="fa fa-lock"></i>
        Manage System Permissions
      </a> 
    </div>
  
        {{#if isUsersShowing}}
          {{manage-users}}
        {{/if}}
        {{#if isRolesEditing }}
          {{manage-roles}}
        {{/if}}
        {{#if isFeaturesEditing }}
          {{manage-features}}
        {{/if}}


{{else}}
  {{#if UE001IsPermitted}}
    {{user-edit}}
  {{/if}}
{{/if}}

