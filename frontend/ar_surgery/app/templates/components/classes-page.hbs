<header class="w3-container w3-center" style="padding-top:22px; padding-bottom:22px">
    <h1><b><i class="fa fa-users"></i> Classes</b></h1>
  </header>

  <div class="w3-bar w3-black">
    <a class="w3-bar-item w3-button w3-mobile {{MC}}" style="width:50%" {{action "myClass"}}>
        <i class="fas fa-graduation-cap"></i>
        My Classes
    </a>
    <a class="w3-bar-item w3-button w3-mobile {{AC}}" style="width:50%" {{action "allClass"}}>
        <i class="fas fa-globe"></i>
        All Classes
    </a>
</div>
<br>
{{#if isAllClass}}
  <div class="w3-row-padding w3-margin-bottom">
      <div class="w3-container w3-padding-16">
        {{#if TCLADDIsPermitted}}
          {{add-new-class}}
        {{/if}}
          <table class="w3-table-all">
            <thead>
            <tr>
              <th>Class Name</th>
              <th>Instructor</th>
              <th>Size</th>
              <th>Program</th>
              <th>School</th>
              <th></th>
            </tr>
            </thead>
            <tbody>

            {{#each allClasses as |class index|}}
              <tr>
                <td>
                  {{class.className}}
                </td>
                <td>
                  {{class.teacher.lastName}}, {{class.teacher.firstName}}
                </td>
                <td>
                  {{class.classSize}}
                </td>
                <td>
                  {{class.program}}
                </td>
                <td>
                  {{class.school}}
                </td>
                <td>
                  {{class-register ID=class in=index already=regdClasses}}
                </td>
              </tr>
            {{/each}}
            </tbody>
          </table>
      </div>
</div>
<br>
{{/if}}

{{#if isMyClass}}
  {{#if isMainClasses}}
  <div class="w3-row-padding w3-margin-bottom">
      <div class="w3-container w3-padding-16">
        {{#if TCLADDIsPermitted}}
          {{add-new-class}}
        {{/if}}
        {{#if noClass}}
          <h5 class="w3-center">No Class Registrations Found</h5>
        {{else}}
          <table class="w3-table-all">
            <thead>
            <tr>
              <th>Class Name</th>
              <th>Instructor</th>
              <th>Size</th>
              <th>Program</th>
              <th>School</th>
              <th></th>
              <th></th>
              {{#if TCLDELIsPermitted}}
                <th></th>
              {{/if}}
            </tr>
            </thead>
            <tbody>

            {{#each personalClasses as |class|}}
              <tr>
                <td>
                  {{class.className}}
                </td>
                <td>
                  {{class.teacher.lastName}}, {{class.teacher.firstName}}
                </td>
                <td>
                  {{class.classSize}}
                </td>
                <td>
                  {{class.program}}
                </td>
                <td>
                  {{class.school}}
                </td>
                <td>
                  <button class="w3-button w3-center w3-round-large w3-black" {{action 'viewOneClassSpread' class}}>Class Page</button>
                </td>
                <td>
                  <button class="w3-button w3-center w3-round-large w3-black" {{action 'drop' class.id}}>Drop Class</button>
                </td>
                {{#if TCLDELIsPermitted}}
                <td>
                  {{delete-class ID=class.id}}
                </td>
                {{/if}}
              </tr>
            {{/each}}
            </tbody>
          </table>
          {{/if}}
      </div>
    </div>
    {{/if}}
    {{#if isOneClass}}
      <div class="w3-row-padding w3-margin-bottom">
        <div class="w3-container w3-padding-16">
          <button class="w3-button w3-left w3-round-large w3-black" {{action 'myClass'}}><i class="fas fa-arrow-left"></i>  Back to My Classes</button>
          {{class-spread cls=oneClass}}
        </div>
      </div>
    {{/if}}
<br>
{{/if}}

